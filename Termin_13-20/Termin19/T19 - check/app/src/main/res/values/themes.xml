<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Termin19Rad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/material_on_background_emphasis_medium</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="backgroundColor">@color/whiteSmoke</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Termin19RadTwo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkOrange</item>
        <item name="colorPrimaryVariant">@color/pinkish</item>
        <item name="colorOnPrimary">@color/darkOrange</item>
        <item name="android:textColor">@color/darkOrange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkOrange</item>
        <item name="colorSecondaryVariant">@color/pinkish</item>
        <item name="colorOnSecondary">@color/darkOrange</item>
        <item name="colorAccent">@color/material_on_background_emphasis_medium</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="backgroundColor">@color/darkOrange</item>
        <!-- Customize your theme here. -->
    </style>
</resources>